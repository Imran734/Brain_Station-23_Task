package com.brainstation23.automation.test.pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;

public class MyAccountPage {
	WebDriver driver;
	By dress = By.xpath("//*[@id=\"block_top_menu\"]/ul/li[2]/a");
	By casualDress = By.xpath("//*[@id=\"block_top_menu\"]/ul/li[2]/ul/li[1]/a");
	MyAccountPage(WebDriver driver){
		this.driver=driver;
	}
	
	public void goToCasualDress() {
		WebElement casualDresses = driver.findElement(By.xpath("//*[@id=\"block_top_menu\"]/ul/li[2]/a"));
		Actions a = new Actions(driver);
		a.moveToElement(casualDresses).perform();
		driver.findElement(By.xpath("//*[@id=\"block_top_menu\"]/ul/li[2]/ul/li[1]/a")).click();
	}
	

}
